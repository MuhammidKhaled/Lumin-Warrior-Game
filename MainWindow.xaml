<Window x:Class="LuminWarrior.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuminWarrior"
        mc:Ignorable="d"
        Title="Lumin Warrior"
        WindowState="Maximized"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}">

    <Canvas Name="GameCanvas"
            Focusable="True" 
            Background="Black"
            KeyUp="OnKeyUp"
            KeyDown="OnKeyDown"
            MouseMove="OnMouseMove"
            MouseLeftButtonDown="OnMouseLeftButtonDown"
            MouseLeftButtonUp="OnMouseLeftButtonUp"
            MouseLeave="OnMouseLeave">

        <StackPanel x:Name="ScorePanel" Canvas.Left="51" Canvas.Top="26" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Name="CoinImage" Source="/assets/images/scorecoin.png" Width="43" Height="43" Margin="0,0,10,0" 
                       VerticalAlignment="Center"/>
                <Label Name="ScoreText" 
                       Content="0" 
                       FontSize="23" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Padding="10"/>
            </StackPanel>
            <Rectangle Height="3" Fill="Aqua" Width="135" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel x:Name="LevelPanel" Canvas.Left="51" Canvas.Top="81" Margin="0,0,0,20">
            <Label Name="LevelText" 
                   Content="Level 1" 
                   FontSize="23" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Padding="10"/>
            <Rectangle Height="3" Fill="Aqua" Width="135" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel x:Name="StarsPanel" Canvas.Left="51" Canvas.Top="136" Orientation="Horizontal" HorizontalAlignment="Center">
            <Grid>
                <Image x:Name="Star1Empty" Source="/assets/images/emptylivestar.png" Width="33" Height="33" Margin="3,9,9,3" VerticalAlignment="Center"/>
                <Image x:Name="Star1" Source="/assets/images/livestar.png" Width="33" Height="33" Margin="3,9,9,3" VerticalAlignment="Center"/>
            </Grid>

            <Grid>
                <Image x:Name="Star2Empty" Source="/assets/images/emptylivestar.png" Width="33" Height="33" Margin="3,9,9,3" VerticalAlignment="Center"/>
                <Image x:Name="Star2" Source="/assets/images/livestar.png" Width="33" Height="33" Margin="3,9,9,3" VerticalAlignment="Center"/>
            </Grid>

            <Grid>
                <Image x:Name="Star3Empty" Source="/assets/images/emptylivestar.png" Width="33" Height="33" Margin="3,9,9,3" VerticalAlignment="Center"/>
                <Image x:Name="Star3" Source="/assets/images/livestar.png" Width="33" Height="33" Margin="3,9,9,3" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Canvas>
</Window>